<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.hs.emirim.dngus242.kokoalarm"
    android:installLocation="auto"
    android:versionCode="20130904"
    android:versionName="20130904" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:name="com.orm.SugarApp"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name=".KoKoAlarmActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Way"
            android:label="Way"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AddAlarm"
            android:label="AddAlarm"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SettingAlarm"
            android:label="SettingAlarm"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="KoKoAlarm_app.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="kr.hs.emirim.dngus242.kokoalarm" />

        <receiver
            android:name=".AlarmReceiver"
            android:process=":remote" >
        </receiver>
    </application>

</manifest>